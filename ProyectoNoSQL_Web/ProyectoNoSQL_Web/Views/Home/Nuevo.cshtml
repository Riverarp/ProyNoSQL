@model ProyectoNoSQL_Web.Entidades.DatosPersonales

@{
    ViewBag.Title = "Nuevo";
}

<h2>Nuevo</h2>

<div class="container">
    <div class="row justify-content-center" style="margin-top:5%">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-3 d-none d-lg-block"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h3 class="h4 text-gray-900 mb-4">Registrar Usuario</h3>
                                </div>

                                @if (ViewBag.MsjPantalla != null)
                                {
                                    <div class="alert alert-warning" role="alert" style="text-align:center">
                                        @ViewBag.MsjPantalla
                                    </div>
                                }

                                @using (Html.BeginForm("Nuevo", "Home"))
                                {
                                    <div class="form-group my-2">
                                        @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control form-control-user", @placeholder = "Cedula", @required = "true" })
                                    </div>
                                    <div class="form-group my-2">
                                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-user", @placeholder = "Nombre", @required = "true" })
                                    </div>
                                    <div class="form-group my-2">
                                        @Html.TextBoxFor(m => m.ApellidoP, new { @class = "form-control form-control-user", @placeholder = "Apellido Paterno", @required = "true" })
                                    </div>
                                    <div class="form-group my-2">
                                        @Html.TextBoxFor(m => m.ApellidoM, new { @class = "form-control form-control-user", @placeholder = "Apellido Materno", @required = "true" })
                                    </div>
                                    <div class="form-group my-2">
                                        @Html.TextBoxFor(m => m.Edad, new { @class = "form-control form-control-user", @placeholder = "Edad", @required = "true" })
                                    </div>
                                    <div class="form-group my-2">
                                        @Html.DropDownListFor(m => m.Genero, new SelectList(new[]
                                        {
                                            new { Value = "Masculino", Text = "Masculino" },
                                            new { Value = "Femenino", Text = "Femenino" }
                                        }, "Value", "Text"), "Seleccione un género", new { @class = "form-control form-control-user", @required = "true" })
                                    </div>
                                    <div class="form-group">
                                        @Html.HiddenFor(m => m.Fecha)
                                    </div>

                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Procesar">
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
